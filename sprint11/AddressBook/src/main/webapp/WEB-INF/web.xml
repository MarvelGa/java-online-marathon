<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>RecordServlet</servlet-name>
        <servlet-class>com.softserve.itacademy.servlets.RecordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecordServlet</servlet-name>
        <url-pattern>/records/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListServlet</servlet-name>
        <servlet-class>com.softserve.itacademy.servlets.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/records/list</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>com.softserve.itacademy.servlets.HomePageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ReadRecordServlet</servlet-name>
        <servlet-class>com.softserve.itacademy.servlets.ReadRecordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReadRecordServlet</servlet-name>
        <url-pattern>/records/read</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateRecordServlet</servlet-name>
        <servlet-class>com.softserve.itacademy.servlets.UpdateRecordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateRecordServlet</servlet-name>
        <url-pattern>/records/update</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DeleteRecordServlet</servlet-name>
        <servlet-class>com.softserve.itacademy.servlets.DeleteRecordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteRecordServlet</servlet-name>
        <url-pattern>/records/delete</url-pattern>
    </servlet-mapping>


    <error-page>
        <error-code>404</error-code>
        <location>/Error.html</location>
    </error-page>

    <error-page>
        <error-code>400</error-code>
        <location>/Error.html</location>
    </error-page>

</web-app>